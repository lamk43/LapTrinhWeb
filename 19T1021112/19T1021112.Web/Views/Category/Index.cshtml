
@{
    ViewBag.Title = "Quản lý Loại Hàng";
}
<div class="box box-primary">
    <div class="box-body">
        <form>
            <div class="input-group">
                <input type="text" name=" searchValue" class="form-control" placeholder="Search">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Category/Create" class=" btn btn-primary" style="margin-left:5px">
                        <i class=" fa fa-plus"> Bổ Sung </i>
                    </a>
                </div>
            </div>
        </form>
        <!--Kết quả tìm kiếm-->
        <p style=" margin top:10px">
            Có <strong>50.000</strong> sản phẩm <strong>300</strong> trang
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr class="bg-primary">
                        <th>Mã Hàng</th>
                        <th>Tên Hàng</th>
                        <th>Mô Tả</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <tr>
                            <td>Hublot.1234</td>
                            <td>Đồng Hồ HubLot</td>
                            <td>...</td>
                            <td>
                                <a href="~/Category/Edit" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="~/Category/Delete" class="btn btn-xs btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="text-center">
            <ul class="pagination">
                <li><a href="#">1</a></li>
                <li class="active"><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
            </ul>
        </div>

    </div>
</div>
